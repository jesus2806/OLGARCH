<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGestorVentas.Views.LoginViews.LoginView"
             xmlns:helpers="clr-namespace:AppGestorVentas.Helpers"
             Title="LoginView">
    <Grid>
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnBackgroundTapped" />
        </Grid.GestureRecognizers>


        <VerticalStackLayout VerticalOptions="Center" WidthRequest="320" Margin="0,-80,0,0">
            <Border Padding="30" Stroke="Transparent" InputTransparent="False">
                <Grid ColumnDefinitions="40,*,40" RowDefinitions="200,70,50,70">
                    <Image
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Grid.Row="0"
                        Source="logo.png"
                        />

                    <Label
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="{x:Static helpers:MaterialDesignIcons.Account}"
                        FontFamily="MaterialDesignIcons"
                        TextColor="#2e4347"
                        FontSize="35"
                        VerticalTextAlignment="Center"/>

                    <Entry                
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="1"
                        Text="{Binding SUsuario,Mode=TwoWay}"
                        TextTransform="Uppercase"
                        x:Name="user"
                        HeightRequest="50"
                        Margin="0,10"
                        Placeholder="Usuario"
                        Completed="OnEntryCompleted"/>

                    <Label 
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="{x:Static helpers:MaterialDesignIcons.Lock}"
                        FontFamily="MaterialDesignIcons"
                        TextColor="#2e4347"
                        FontSize="35"
                        VerticalTextAlignment="Center"/>
                    
                    <Entry                
                        Grid.Column="1"
                        Grid.Row="2"
                        IsPassword="True"
                        Text="{Binding SPassword,Mode=TwoWay}"
                        x:Name="pass"
                        Margin="0,10"
                        HeightRequest="50"
                        Placeholder="ContraseÃ±a"
                        Completed="OnEntryCompleted"/>

                    <Button 
                        Grid.Column="2"
                        Grid.Row="2"
                        Text="{x:Static helpers:MaterialDesignIcons.Eye}"
                        FontFamily="MaterialDesignIcons"
                        TextColor="#2e4347"
                        BackgroundColor="White"
                        HeightRequest="20"
                        Padding="0"
                        Clicked="MostrarOcultarPass"
                        FontSize="35"/>

                    <Button 
                        Grid.Column="1"
                        Grid.Row="3"
                        Margin="0,20,0,0"
                        Text="Ingresar"
                        BackgroundColor="#798C65"
                        Command="{Binding IngresarCommand}"/>
                    
                </Grid>
            </Border>

        </VerticalStackLayout>



    </Grid>

    
    

</ContentPage>